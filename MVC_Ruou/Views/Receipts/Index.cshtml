@model MVC_Ruou.Models.ReceiptVM

@{
    ViewData["Title"] = "Nhập kho";
    ViewData["banner"] = "Danh sách đơn nhập kho";
    @section Wines {
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="" asp-controller="Wines" asp-action="Index">Sản phẩm</a>
        </li>
    }
    ;
    @section Receipt {
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="" asp-controller="Receipts" asp-action="Index">Nhập kho</a>
        </li>
    }
    ;
    @section Logout {
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="" asp-controller="Login" asp-action="Logout">Đăng xuất</a>
        </li>
    }
    ;
}
<div class="top-div">
    <p>
        <a asp-action="Create"><button class="btn btn-primary btn-lg">Tạo đơn nhập kho</button></a>
    </p>

    <div class="search-div">
        <form asp-controller="Receipts" asp-action="Index" method="get" id="search-form">
            <label for="search-form">Tìm kiếm </label>
            <p>
                Theo tên người nhập:
                <select asp-for="chosenUser" asp-items="Model.user">
                    <option value="">All</option>
                </select>

                Mã hóa đơn: <input type="text" name="SearchString" />
                <input type="submit" value="Tìm" />
            </p>
        </form>
    </div>
</div>

<table class="table" id="product-table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.receipts[0].ReceiptID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.receipts[0].UserName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.receipts[0].Quantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.receipts[0].Total)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.receipts[0].CreateDate)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.receipts) {
        <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ReceiptID)
                </td>
            <td>
                @Html.DisplayFor(modelItem => item.UserName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quantity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Total)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreateDate)
            </td>
            <td>
                    <a asp-action="Edit" asp-route-id="@item.ID"><button class="btn btn-outline-secondary">Chỉnh sửa</button></a>
                    <a asp-action="Details" asp-route-id="@item.ReceiptID"><button class="btn btn-outline-secondary">Chi tiết</button></a>
                    <a asp-action="Delete" asp-route-id="@item.ID"><button class="btn btn-outline-secondary">Xóa</button></a>
            </td>
        </tr>
}
    </tbody>
</table>
<a asp-controller="ReceiptDetails" asp-action="Index"><button class="btn btn-primary btn-lg">Danh sách tất cả chi tiết nhập kho</button></a>